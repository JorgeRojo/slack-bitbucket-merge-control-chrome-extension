{
  "manifest_version": 3,
  "name": "slack-frontend-closure",
  "version": "1.0",
  "description": "Lee el contenido de un canal de Slack usando la API.",
  "permissions": [
    "storage",
    "alarms"
  ],
  "options_page": "options.html",
  "host_permissions": [
    "https://slack.com/api/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16_loading.png",
      "48": "images/icon48_loading.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://bitbucket.rdpnts.com/projects/*/repos/*/pull-requests/*/overview*"],
      "js": ["bitbucket_content.js"]
    }
  ]
}