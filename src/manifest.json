{
  "manifest_version": 3,
  "name": "slack-frontend-closure",
  "version": "1.0",
  "description": "Lee el contenido de un canal de Slack usando la API.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "options_page": "options.html",
  "host_permissions": [
    "https://slack.com/*",
    "https://api.slack.com/*",
    "http://localhost:8888/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}